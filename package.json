{
  "name": "phaser-desktop",
  "version": "1.0.1",
  "description": "Phaser Desktop",
  "main": "main.js",
  "repository": "https://github.com/lucajoos/phaser-desktop",
  "scripts": {
    "test": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": ["phaser", "desktop"],
  "author": "Luca Joos <1a85ra7z@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^11.2.2",
    "electron-rebuild": "^2.3.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "onceupon.js": "^1.5.5",
    "serialport": "^9.0.6",
    "socket.io": "^3.1.0",
    "socket.io-client": "^3.1.0",
    "update-electron-app": "^2.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "packageManager": "yarn",
        "icon": "src/img/app-icon.ico",
        "appCopyright": "Company Name Here",
        "ignore": [
          ".+.test.js",
          ".*.env",
          ".eslintrc",
          ".gitignore",
          "README.md",
          "yarn.lock",
          ".jshintrc",
          ".babelrc",
          ".stylus",
          ".pug"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Phaser Desktop",
            "setupIcon": "./assets/icon.ico",
            "loadingGif": "./assets/slash.gif"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
